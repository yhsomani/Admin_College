<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AdminCollege" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Brand Colors -->
        <item name="colorPrimary">@color/brand_cyan</item>
        <item name="colorPrimaryVariant">@color/brand_cyan_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/brand_accent</item>
        <item name="colorSecondaryVariant">@color/brand_accent</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- DYNAMIC UI COLORS (DARK MAPPING) -->
        <!-- Map 'android:colorBackground' to dark gray -->
        <item name="android:colorBackground">@color/dark_bg_gray</item>
        <!-- Map 'colorSurface' (Cards) to slightly lighter dark gray -->
        <item name="colorSurface">@color/dark_surface_gray</item>
        <!-- Map 'colorOnBackground' (Text) to light gray -->
        <item name="colorOnBackground">@color/dark_text_gray</item>
        <!-- Map 'colorOnSurface' (Text on cards) to light gray -->
        <item name="colorOnSurface">@color/dark_text_gray</item>
    </style>
</resources>